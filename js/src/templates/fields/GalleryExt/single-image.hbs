<div class="kb-gallery--image-holder">
    <img src="{{ image.previewUrl }}">
    <div class="kb-gallery--meta-info">
        <label> Vimeo
            <textarea type="hidden" name="{{ inputName }}[meta]" rows="2">{{ image.meta }}</textarea>
        </label>
        <label> Beschreibung
            <textarea type="hidden" name="{{ inputName }}[caption]" rows="2">{{ image.caption }}</textarea>
        </label>
        <input type="hidden" name="{{ inputName }}[id]" value="{{ image.id }}">
    </div>
</div>
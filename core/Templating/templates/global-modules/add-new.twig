<div class="postbox">
    <h3>Template Settings</h3>

    <div class="inside">
        <div class="templates-add-new-form-wrapper">
            <h3>Create a new Template</h3>

            <p class="description">Please chose the Module Type and provide an name for the template to identify it
                later</p>

            <div class="kb-menu-field-section">

                <div class="kb-menu-field kb-menu-field-with-spinner">
                    <label>Module Name </label>
                    <input class="kb-change-observe"
                           onchange="KB.Menus.createSanitizedId(this, 'gmodules')"
                           type="text"
                           name="new-gmodule[name]"
                           value="{{ data.name }}">

                    <span class="spinner"></span>

                </div>
                <div class="kb-menu-field">
                    <label>Module ID </label>
                    <input class="kb-js-area-id" type="text" readonly name="new-gmodule[id]" value="{{ data.id }}">
                </div>
            </div>
            <div class="kb-menu-field-section">
                <div class="kb-menu-field-section_description">
                    <p class="description">
                        Master modules a single, fixed content blocks, managed centrally
                    </p>
                </div>
                <div class="kb-menu-field-section_inputs">
                    <div class="kb-menu-field">
                        <input type="checkbox" name="new-gmodule[master]" {{ master }} value="1">
                        <label>create a master Template?</label>
                    </div>
                </div>
            </div>
            <div class="kb-menu-field-section">
                <div class="kb-menu-field-section_description">
                    <p class="description">
                        Chose the module type:
                    </p>
                </div>
                <div class="kb-menu-field-section_inputs">
                    <div class="kb-menu-field">
                        <select class="styled" name="new-gmodule[type]">
                            {% for module in modules %}
                                <option {{ module.selected }} value="{{ module.class }}">{{ module.name }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
            </div>
            <input type="hidden" name="_nonce" value="{{ nonce }}">
        </div>
    </div>
</div>
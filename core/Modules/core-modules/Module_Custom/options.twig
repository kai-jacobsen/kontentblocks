<div class="kb-field--wrap">
    <ul class="kb-generic--list">

    </ul>
    <a class="button-primary kb-js--generic-create-item">create</a>
    <script type="text/template" class="template">
        <li class="kb-generic--list-item">
            <div class="kb-js-generic-toggle kb-generic--toggle-title">Item</div>
            <div class="kb-generic--toggle-box">
                <div class="kb-generic-tabs kb_fieldtabs">
                    <ul>
                        <li><a href="#tab-image-<%= base %>">Image</a></li>
                        <li><a href="#tab-text-<%= base %>">Text</a></li>
                    </ul>
                    <div id="tab-image-<%= base %>">
                        <div class="kb_field">
                            <div class="kb-generic--image-wrapper">

                                <% if (!_.isNull(imgsrc)){ %>

                                <img src="<%= imgsrc.sizes.thumbnail.url %>">

                                <% } %>
                            </div>
                            <input class="kb-js-generic--imgid" type="hidden" name="<%= base %>[items][<%= counter %>][imgid]"
                                   value="<%= imgid %>">
                        </div>
                        <a class='kb-js-add-custom'>add image</a>
                    </div>
                    <div id="tab-text-<%= base %>">
                        <div id="kb-generic--editor-<%= counter %>" class="kb_field kb-remote-editor"
                             data-name="<%= base %>[items][<%= counter %>][content]">
                            <%= content %>
                        </div>
                    </div>
                </div>

            </div>

        </li>
    </script>
</div>

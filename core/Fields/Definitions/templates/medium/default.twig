{% extends Form.getLayout() %}
{% block fieldmarkup %}
    <textarea class="kb-medium-editable" id='{{ Form.getInputFieldId() }}' name='{{ Form.getFieldName() }}'
              placeholder='{{ Form.getPlaceholder() }}'
    {% for attr, value in Field.getArg('attributes', []) %}
        {{ attr }}="{{ value|esc_attr }}"
    {% endfor %}>{{ Field.getValue()|raw }}</textarea>
{% endblock %}
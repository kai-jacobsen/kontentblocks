<div class="kb-field-wrapper kb-js-field-identifier {% if Field.getArg('description') %} field-has-description {% endif %}"
     data-kbfuid="{{ Field.uniqueId|escape('html_attr') }}"
     id='{{ Field.uniqueId|escape('html_attr') }}'>
    <div class="kb-field-type-label">{{ Field.getSetting('type') }}</div>
    <div class="kb-field-header">
        {% if (Field.getArg('title')) %}
            <h4>{{ Field.getArg('title')|escape }}</h4>
        {% endif %}
    </div>
    <div class='kb_field kb-field kb-field--{{ Field.getSetting('type') }} kb-field--reset klearfix'>
        {{ Form.getLabel() }}
